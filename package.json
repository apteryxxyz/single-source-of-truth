{
  "name": "single-source-of-truth",
  "version": "0.6.1",
  "packageManager": "pnpm@10.20.0",
  "type": "module",
  "files": ["dist/**/*.{js,d.ts}"],
  "bin": {
    "truth": "./dist/command.js"
  },
  "exports": {
    "./config": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "default": "./dist/*/index.js"
    }
  },
  "scripts": {
    "lint": "biome ci .",
    "format": "biome check . --write",
    "check": "tsc --noEmit",
    "build": "tsdown"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "code-block-writer": "^13.0.3",
    "commander": "^13.1.0"
  },
  "peerDependencies": {
    "arktype": "^2.1.25",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@types/node": "^24.10.0",
    "arktype": "^2.1.25",
    "tsdown": "^0.15.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "peerDependenciesMeta": {
    "arktype": {
      "optional": true
    }
  }
}
